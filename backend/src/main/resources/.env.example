# MongoDB
MONGO_URI=mongodb://admin:admin123@localhost:27017/siti?authSource=admin

# JWT Auth
JWT_SECRET=replace-with-your-secret
JWT_EXPIRES=604800 # 7 ngày
JWT_COOKIE_NAME=siti_token
CSRF_HEADER_NAME=X-CSRF-Token

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://siti-frontend.vercel.app

# Cloudflare R2 (S3-compatible)
# Thay thế các giá trị dưới đây bằng thông tin từ dashboard Cloudflare của bạn
# 1. Tìm Account ID trong trang tổng quan R2
# 2. Tạo bucket và lấy tên
# 3. Tạo API token với quyền "Object Read & Write"
# 4. Kết nối custom domain hoặc dùng public URL của R2

# Endpoint của R2, thay <ACCOUNT_ID> bằng ID của bạn
S3_ENDPOINT=https://<ACCOUNT_ID>.r2.cloudflarestorage.com

# Region cho R2 luôn là "auto"
S3_REGION=auto

# Access Key và Secret Key từ API token bạn đã tạo
S3_ACCESS_KEY=your-r2-access-key-id
S3_SECRET_KEY=your-r2-secret-access-key

# Tên bucket bạn đã tạo trên R2
S3_BUCKET=siti-assets

# URL public để truy cập file, có thể là custom domain hoặc R2.dev URL
S3_PUBLIC_BASE=https://pub-<ID>.r2.dev

# Tùy chọn: prefix thư mục theo môi trường
S3_KEY_PREFIX=dev/

# Server
PORT=8080
