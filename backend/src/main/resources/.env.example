# MongoDB
MONGO_URI=mongodb://admin:admin123@localhost:27017/siti?authSource=admin

# JWT Auth
JWT_SECRET=replace-with-your-secret
JWT_EXPIRES=604800 # 7 ngày
JWT_COOKIE_NAME=siti_token
CSRF_HEADER_NAME=X-CSRF-Token

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://siti-frontend.vercel.app

# AWS S3-compatible (ví dụ dùng R2 hoặc MinIO)
S3_ENDPOINT=https://s3.amazonaws.com
S3_REGION=ap-southeast-1
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_BUCKET=siti-bucket
S3_PUBLIC_BASE=https://your-cdn-domain

# Server
PORT=8080
